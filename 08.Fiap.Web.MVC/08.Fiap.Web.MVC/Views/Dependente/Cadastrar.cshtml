@model _08.Fiap.Web.MVC.ViewModels.DependenteViewModel

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Dependente</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class=" = form-group">
        @Html.LabelFor(d => d.Dependente.Nome)
        @Html.TextBoxFor(d => d.Dependente.Nome, new { @class = "form-control" })
    </div>
    <div class=" = form-group">
        @Html.LabelFor(d => d.Dependente.DataNascimento)
        @Html.TextBoxFor(d => d.Dependente.DataNascimento, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(r => r.Dependente.Responsavel)
        @Html.DropDownListFor(r => r.Dependente.ResponsavelId, Model.Responsaveis as SelectList, "Selecione", new { @class = "form-control"})
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

