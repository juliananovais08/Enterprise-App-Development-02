@model _08.Fiap.Web.MVC.ViewModels.ResponsavelViewModel

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Responsável</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class=" = form-group">
        @Html.LabelFor(r => r.Responsavel.Nome)
        @Html.TextBoxFor(r => r.Responsavel.Nome, new { @class = "form-control" })
    </div>
    <div class=" = form-group">
        @Html.LabelFor(r => r.Responsavel.Telefone)
        @Html.TextBoxFor(r => r.Responsavel.Telefone, new { @class = "form-control" })
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

<h2>Responsáveis</h2>

<table class="table">
    <tr>
        <th>Nome</th>
        <th>Telefone</th>
    </tr>
    @foreach(var item in Model.Responsaveis)
    {
        <tr>
            <td>@item.Responsavel.Nome</td>
            <td>@item.Responsavel.Telefone</td>
        </tr>
    }

</table>

