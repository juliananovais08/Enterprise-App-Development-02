@model _06.Fiap.Web.MVC.Models.Animal
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Pet</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(a => a.Nome)
        @Html.TextBoxFor(a => a.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Raca)
        @Html.TextAreaFor(a => a.Raca, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Peso)
        @Html.TextAreaFor(a => a.Peso, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(a => a.Castrado)
        @Html.LabelFor(a => a.Castrado)
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

